{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./scripts/**/*",
    "./typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cache",
    "artifacts"
  ]
}
