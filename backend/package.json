{
  "name": "zkredit-protocol",
  "version": "1.0.0",
  "description": "Decentralized financial identity system using multi-chain architecture",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:contracts",
    "build:contracts": "cd packages/contracts && npm run build",
    "test": "npm run test:contracts",
    "test:contracts": "cd packages/contracts && npm run test",
    "deploy": "npm run deploy:lisk && npm run deploy:zama",
    "deploy:lisk": "cd packages/contracts/lisk && npm run deploy",
    "deploy:zama": "cd packages/contracts/zama && npm run deploy",
    "lint": "npm run lint:contracts",
    "lint:contracts": "cd packages/contracts && npm run lint",
    "clean": "npm run clean:contracts",
    "clean:contracts": "cd packages/contracts && npm run clean"
  },
  "keywords": [
    "blockchain",
    "decentralized-finance",
    "credit-scoring",
    "multi-chain",
    "fhe",
    "zkredit",
    "identity-protocol"
  ],
  "author": "Zkredit Team",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.1.6",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "packages/contracts",
    "packages/cross-chain-listener",
    "scripts"
  ]
}
